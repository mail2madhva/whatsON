<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="100dp" android:id="@+id/frameLayout1" android:layout_width="match_parent" android:visibility="visible">
        <LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:layout_height="match_parent" android:id="@+id/linearLayout1" android:weightSum="1">
            <TextView android:textColor="@color/SteelBlue" android:layout_width="match_parent" android:id="@+id/recommended_page_title" android:layout_height="match_parent" android:text="You might like to watch this" android:textSize="14dp" android:paddingBottom="4dip" android:layout_weight="0.4"></TextView>
            <com.nextgen.coverflow.CoverFlow android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/view_rec_coverflow" android:layout_weight="0.2"></com.nextgen.coverflow.CoverFlow>
            <TextView android:layout_width="match_parent" android:id="@+id/view_rec_event_name" android:layout_height="match_parent" android:text="Movie name here" android:paddingBottom="4dip" android:layout_weight="0.4" android:layout_gravity="center_horizontal" android:textSize="18dp"></TextView>
        </LinearLayout>
        <TextView android:paddingBottom="4dip" android:textSize="10dp" android:layout_width="match_parent" android:id="@+id/view_rec_date" android:layout_height="match_parent"></TextView>
        <TextView android:paddingBottom="4dip" android:textSize="10dp" android:id="@+id/view_rec_short_desc" android:layout_height="match_parent" android:layout_width="match_parent" android:layout_gravity="top"></TextView>
    </FrameLayout>


