<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/linearLayout3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageView android:id="@+id/reminder_poster" android:layout_height="158dp" android:layout_width="107dp"></ImageView>
        <LinearLayout android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <TextView android:textStyle="bold" android:layout_height="wrap_content" android:id="@+id/reminder_text_descr" android:textSize="24dp" android:layout_width="wrap_content" android:textColor="@color/DstvBlue" android:text="reminder text here"></TextView>
            <TextView android:textStyle="bold" android:layout_height="wrap_content" android:textSize="24dp" android:layout_width="wrap_content" android:text="reminder text here" android:id="@+id/reminder_time" android:textColor="@color/White"></TextView>
            <TextView android:textStyle="bold" android:layout_height="wrap_content" android:textSize="24dp" android:layout_width="wrap_content" android:text="reminder text here" android:id="@+id/reminder_date" android:textColor="@color/White"></TextView>
            <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_width="wrap_content">
                <Button android:layout_height="wrap_content" android:clickable="true" android:id="@+id/reminder_positive_btn" android:text="Set reminder" android:layout_width="wrap_content"></Button>
                <Button android:layout_height="wrap_content" android:clickable="true" android:id="@+id/reminder_negative_btn" android:text="Cancel" android:layout_width="wrap_content"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
 
</RelativeLayout>