<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent" android:id="@+id/frameLayout1" android:layout_weight="1" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout4" android:layout_height="match_parent" android:orientation="vertical">
            <ImageView android:layout_width="wrap_content" android:clickable="false" android:layout_height="wrap_content" android:src="@drawable/banner_dexter" android:layout_marginRight="0dp" android:layout_marginLeft="0dp" android:id="@+id/event_row_image_banner" android:adjustViewBounds="true" android:layout_gravity="fill" android:paddingBottom="4dp" android:paddingLeft="4dp" android:paddingRight="4dp" android:paddingTop="4dp"></ImageView>
            <FrameLayout android:layout_width="match_parent" android:visibility="invisible" android:id="@+id/frameLayout2" android:layout_gravity="bottom" android:layout_height="0dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/linearLayout2"></LinearLayout>
                <TextView android:text="Lone Wolf Mcquade" android:id="@+id/event_row_name" android:layout_height="match_parent" android:textSize="28dp" android:layout_gravity="bottom|center" android:background="#BF000000" android:layout_width="match_parent" android:textColor="@color/SkyBlue" android:paddingLeft="100dp"></TextView>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:orientation="vertical">
                    <TextView android:text="Discovery" android:layout_width="wrap_content" android:id="@+id/event_row_channel" android:layout_height="wrap_content" android:textSize="16dp" android:layout_gravity="bottom" android:textColor="@color/White" android:layout_marginLeft="6px"></TextView>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout3">
                        <TextView android:text="10-Oct-2011" android:layout_width="wrap_content" android:id="@+id/event_row_date" android:layout_height="wrap_content" android:textSize="14dp" android:layout_gravity="bottom|left" android:textColor="@color/White"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <TextView android:text="16h30" android:id="@+id/event_row_time" android:layout_height="match_parent" android:textSize="28dp" android:layout_gravity="right" android:layout_width="95dp" android:textColor="@color/White"></TextView>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout >
